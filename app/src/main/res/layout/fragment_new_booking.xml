<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.axelle.travelbuddy.NewBooking">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:ems="10"
        android:id="@+id/userName"
        android:layout_gravity="center_horizontal|top"
        android:textSize="28dp"
        android:textStyle="bold"
        android:text="HAI THERE"
        android:gravity="center_vertical|center|center_horizontal"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small.Title"
        android:textColor="#118aff" />

    <Button
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:text="Go To Maps"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:onClick="openMap"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="@color/common_action_bar_splitter"
        android:textColor="#FF118AFF" />

    <ImageView
        android:layout_width="198dp"
        android:layout_height="128dp"
        android:id="@+id/displayPhoto"
        android:layout_gravity="center_horizontal|bottom"
        android:contentDescription="Picture"
        android:src="@drawable/logo"/>


</FrameLayout>
