<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:visibility="visible"
    android:focusable="false"
    android:padding="20dp"
    android:elevation="0dp"
    android:touchscreenBlocksFocus="false"
    android:id="@+id/qbox">

    <TextView
        android:id="@+id/head_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textColor="#111"
        android:textColorHighlight="#9d1dff"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:background="#fafafa"
        android:layout_below="@+id/timeStamp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LastSeen"
        android:id="@+id/timeStamp"
        android:textColor="#6a88ff"
        android:elegantTextHeight="false"
        android:elevation="4dp"
        android:textSize="16dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/head_desc"
        android:layout_alignEnd="@+id/head_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gmail"
            android:id="@+id/pername"
            android:textColor="#6a88ff"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:layout_above="@+id/head_desc"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</LinearLayout>