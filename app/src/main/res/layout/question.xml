<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/qbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="0dp"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="20dp"
        android:touchscreenBlocksFocus="false"
        android:visibility="visible"
        android:weightSum="1">

        <TextView
            android:id="@+id/bookTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bookDate"
            android:layout_toEndOf="@+id/random2"
            android:layout_toRightOf="@+id/random2"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:text="time"
            android:textColor="#6a88ff"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="1">

        </LinearLayout>

        <TextView
            android:id="@+id/bookDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/random1"
            android:layout_toEndOf="@+id/random2"
            android:layout_toRightOf="@+id/random2"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:text="date"
            android:textColor="#6a88ff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/bookVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookDate"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:text="venue"
            android:textColor="#6a88ff"
            android:textSize="16dp" />

        <Button


            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:clickable="true"
            android:padding="1dp"
            android:text="reply"
            android:textColor="#111"
            android:layout_below="@+id/bookVenue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:padding="5sp"
            android:text="name"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/random1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:text="time: "
            android:textColor="#6a88ff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/random2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bookVenue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:text="date: "
            android:textColor="#6a88ff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/random2"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:elevation="4dp"
            android:text="venue: "
            android:textColor="#6a88ff"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>